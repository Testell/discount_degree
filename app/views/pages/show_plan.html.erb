<div class="container text-center pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow custom-card mx-auto">
        <div class="card-body">
          <h1 class="card-title mb-4">Generated Plan</h1>

          <% if @plan %>
            <p><strong>Total Cost:</strong> $<%= number_with_precision(@plan.total_cost, precision: 2) %></p>
            <p><strong>Total Credit Hours:</strong> <%= number_with_precision(@plan.term_assignments.sum { |term| term['credit_hours'].to_f }, precision: 2) %></p>
            <p><strong>Path:</strong> <%= @plan.path.join(' â†’ ') %></p>
            <p><strong>Starting School:</strong> <%= @plan.starting_school.name %></p>
            <p><strong>Ending School:</strong> <%= @plan.ending_school.name %></p>

            <h2 class="mt-4">Term Assignments</h2>
            <% @plan.term_assignments.each do |term| %>
              <h3 class="mt-3">Term <%= term['term_number'] %>: <%= term['term_name'] %> at <%= term['school_name'] %></h3>
              <p><strong>Courses:</strong></p>
              <div class="course-list">
                <% term['courses'].each do |course_name| %>
                  <p><%= course_name %></p>
                <% end %>
              </div>
              <p><strong>Credit Hours:</strong> <%= term['credit_hours'] %></p>
              <p><strong>Cost:</strong> $<%= number_with_precision(term['cost'], precision: 2) %></p>
            <% end %>
          <% else %>
            <p>No plan found.</p>
          <% end %>

          <!-- Non-Functional Save Plan Button -->
          <div class="mt-4">
            <button class="btn custom-btn" disabled>Save Plan</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
