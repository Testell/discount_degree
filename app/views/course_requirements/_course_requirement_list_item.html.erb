<li class="mb-3">
  <div class="card">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <%= link_to course_requirement.course.name,
        course_path(course_requirement.course),
        class: "text-decoration-none",
        data: {
          turbo_frame: "_top",
        } %>
        <span
          class="badge <%= course_requirement.is_mandatory ? 'bg-primary' : 'bg-secondary' %> ms-2"
        >
          <%= course_requirement.is_mandatory ? "Mandatory" : "Optional" %>
        </span>
      </div>
      <%= button_to course_requirement_path(course_requirement),
                    method: :delete,
                    class: "btn btn-danger btn-sm",
                    form: { data: { turbo_frame: "course-requirements-list" } } do %>
        Remove
      <% end %>
    </div>
  </div>
</li>
