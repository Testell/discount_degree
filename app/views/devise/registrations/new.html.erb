<div class="container text-center pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow custom-card mx-auto mb-4">
        <div class="card-body">
          <h2 class="card-title mb-4 fs-2">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :username, class: "form-label fs-3 mb-2" %>
                <%= f.text_field :username,
                             class: "form-control fs-4",
                             autofocus: true,
                             placeholder: "Username" %>
              </div>
            </div>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :email, class: "form-label fs-3 mb-2" %>
                <%= f.email_field :email, class: "form-control fs-4", autocomplete: "email" %>
              </div>
            </div>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :password, class: "form-label fs-3 mb-2" %>
                <% if @minimum_password_length %>
                  <small class="form-text text-muted fs-4">(<%= @minimum_password_length %>
                    characters minimum)</small>
                <% end %>
                <%= f.password_field :password,
                                 class: "form-control fs-4",
                                 autocomplete: "new-password" %>
              </div>
            </div>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :password_confirmation, class: "form-label fs-3 mb-2" %>
                <%= f.password_field :password_confirmation,
                                 class: "form-control fs-4",
                                 autocomplete: "new-password" %>
              </div>
            </div>

            <div class="row justify-content-center">
              <div class="col-md-6 text-center">
                <%= f.submit "Sign up", class: "btn custom-btn-2 fs-4" %>
              </div>
            </div>
          <% end %>

          <div class="mt-4 fs-4 text-dark">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
