<div class="container text-center pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow custom-card mx-auto">
        <div class="card-body">
          <h2 class="card-title mb-4 fs-2">Resend unlock instructions</h2>

          <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :email, class: "form-label fs-3 mb-2" %>
                <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control fs-4" %>
              </div>
            </div>

            <div class="row justify-content-center">
              <div class="col-md-6 text-center">
                <%= f.submit "Resend unlock instructions", class: "btn custom-btn-2 fs-4" %>
              </div>
            </div>
          <% end %>

          <div class="mt-4 fs-4 text-dark">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
