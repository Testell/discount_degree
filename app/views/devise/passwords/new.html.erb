<div class="container text-center pt-5">
 <div class="row justify-content-center">
   <div class="col-md-8">
     <div class="card shadow custom-card mx-auto mb-4">
       <div class="card-body pb-4">
         <h2 class="card-title mb-4 fs-2">Forgot your password?</h2>

         <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          

           <div class="mb-4 row justify-content-center">
             <div class="col-md-6">
               <%= f.label :email, class: 'form-label fs-3 mb-2' %>
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control fs-4' %>
             </div>
           </div>

           <div class="row justify-content-center">
             <div class="col-md-6 text-center">
               <%= f.submit "Send me reset password instructions", class: 'btn custom-btn-2 fs-4' %>
             </div>
           </div>
         <% end %>

         <div class="mt-4 fs-4 text-dark">
           <%= render "devise/shared/links" %>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>
