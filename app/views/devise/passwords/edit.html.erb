<div class="container text-center pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow custom-card mx-auto mb-4">
        <div class="card-body pb-4">
          <h2 class="card-title mb-4 fs-2">Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :password, "New password", class: 'form-label fs-3 mb-2' %>
                <% if @minimum_password_length %>
                  <small class="form-text text-muted d-block fs-4">(<%= @minimum_password_length %> characters minimum)</small>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control fs-4' %>
              </div>
            </div>

            <div class="mb-4 row justify-content-center">
              <div class="col-md-6">
                <%= f.label :password_confirmation, "Confirm new password", class: 'form-label fs-3 mb-2' %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control fs-4' %>
              </div>
            </div>

            <div class="row justify-content-center">
              <div class="col-md-6 text-center">
                <%= f.submit "Change my password", class: 'btn custom-btn-2 fs-4' %>
              </div>
            </div>
          <% end %>

          <div class="mt-4 fs-4 text-dark">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
