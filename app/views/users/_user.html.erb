<div id="<%= dom_id user %>">
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6"><%= @user.username %>'s Profile</h1>

  <% if @user.saved_plans.any? %>
    <section class="mb-8">
      <h2 class="text-xl font-semibold mb-4">Saved Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <%= render partial: 'plans/plan', collection: user.saved_plans.map(&:plan) %>
      </div>
    </section>
  <% else %>
    <p class="text-gray-600">No saved plans yet.</p>
  <% end %>
</div>
</div>
