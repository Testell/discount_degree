<div id="<%= dom_id user %>">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6"><%= user.username %>'s Profile</h1>
    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn custom-btn-2 mr-2" %>

    <% if user.saved_plans.any? %>
      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">Saved Plans</h2>
        <%= render 'saved_plans/saved_plans', saved_plans: user.saved_plans %>
      </section>
    <% else %>
      <p class="text-gray-600">No saved plans yet.</p>
    <% end %>
  </div>
</div>
