<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="alert alert-danger"><%= alert %></div>
<% end %>

<%= render @plan %>

<div class="mt-3">
  <%= link_to "Edit this plan", edit_plan_path(@plan), class: "btn btn-primary" %> |
  <%= link_to "Back to plans", plans_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this plan", @plan, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
