<%= form_with(model: @course, url: courses_path, local: false, html: { id: "new-course-form" }) do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <ul class="list-unstyled">
        <% @course.errors.full_messages.each do |message| %>
          <li>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :credit_hours, "Credit Hours" %>
    <%= form.number_field :credit_hours, class: "form-control" %>
  </div>

  <%= hidden_field_tag :school_id, nil, id: "school-id-field" %>

  <div class="form-group">
    <%= form.label :name, "Course Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code, "Department Code" %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add Course", class: "btn btn-outline-primary btn-block" %>
  </div>
<% end %>
