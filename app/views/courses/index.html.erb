<div class="admin-container">
  <h1 class="admin-header">Courses</h1>
  <p class="notice"><%= notice %></p>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow custom-card">
          <div class="card-body">
            <h5 class="card-title"><%= course.name %></h5>
            <p>
              <strong>Code:</strong>
              <%= course.code %>
            </p>
            <p>
              <strong>Number:</strong>
              <%= course.course_number %>
            </p>
            <p>
              <strong>Credit Hours:</strong>
              <%= course.credit_hours %>
            </p>
            <p>
              <strong>Department:</strong>
              <%= course.department %>
            </p>
            <p>
              <strong>Category:</strong>
              <%= course.category %>
            </p>
            <p>
              <strong>School:</strong>
              <%= course.school.name %>
            </p>

            <% if course.degree_requirements.any? %>
              <h6>Degree Requirements:</h6>
              <ul>
                <% course.degree_requirements.each do |req| %>
                  <li>
                    <%= link_to req.name, degree_requirement_path(req) %>
                    - Part of
                    <%= req.degree.name %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p><strong>Degree Requirements:</strong>
                Not yet assigned</p>
            <% end %>

            <div class="admin-actions mt-3">
              <%= link_to "Show", course, class: "btn custom-btn-2" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add New Course", new_course_path, class: "btn custom-btn-2 fs-4" %>
  </div>
</div>
