
<%= simple_form_for(@school) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :school_type %>
    <%= f.input :credit_hour_price %>
    <%= f.input :minimum_credits_from_school %>
    <%= f.input :max_credits_from_community_college %>
    <%= f.input :max_credits_from_university %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
