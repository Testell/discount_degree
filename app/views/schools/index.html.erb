<div class="admin-container">
  <h1 class="admin-header">Schools</h1>
  <p class="notice"><%= notice %></p>

  <div class="row">
    <% @schools.each do |school| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow custom-card">
          <div class="card-body">
            <h5 class="card-title"><%= school.name %></h5>
            <p>
              <strong>School Type:</strong> <%= school.school_type.humanize %>
            </p>
            <% if school.credit_hour_price.present? %>
              <p>
                <strong>Credit Hour Price:</strong> <%= number_to_currency(school.credit_hour_price) %>
              </p>
            <% end %>

            <% if school.terms.any? %>
              <h6>Tuition Costs by Term:</h6>
              <ul>
                <% school.terms.each do |term| %>
                  <li>
                    <strong><%= term.name %> (Credits: <%= term.credit_hour_minimum %> - <%= term.credit_hour_maximum %>):</strong>
                    <%= number_to_currency(term.tuition_cost) %>
                  </li>
                <% end %>
              </ul>
            <% end %>

            <p>
              <strong>Minimum Credits From School:</strong> <%= school.minimum_credits_from_school %>
            </p>
            <p>
              <strong>Max Credits From Community College:</strong> <%= school.max_credits_from_community_college %>
            </p>
            <p>
              <strong>Max Credits From University:</strong> <%= school.max_credits_from_university || 'Not Applicable' %>
            </p>

            <div class="admin-actions mt-3">
              <%= link_to "Show", school, class: "btn custom-btn-2" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add New School", new_school_path, class: "btn custom-btn-2 fs-4" %>
  </div>
</div>
